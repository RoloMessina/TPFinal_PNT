@model TPFinal_PNT1.Models.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center">Editar Turno</h1>
            <form asp-action="EditarTurno" class="form-group-gap">
                <div class="form-group">
                    <label asp-for="Fecha" class="control-label"></label>
                    <input asp-for="Fecha" class="form-control" />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PacienteId" class="control-label"></label>
                    <select asp-for="PacienteId" class="form-control" asp-items="ViewBag.PacienteId"></select>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProfesionalId" class="control-label"></label>
                    <select asp-for="ProfesionalId" class="form-control" asp-items="ViewBag.ProfesionalId"></select>
                    <span asp-validation-for="ProfesionalId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
                <div class="form-group">
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </form>
            <div class="text-center mt-3">
                <a asp-action="ListarTurnosAsignados">Volver a la lista de turnos</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .form-group-gap .form-group {
        margin-bottom: 16px;
    }
</style>
